<script>
    $(document).ready(function () {

        $('#date').datepicker({
        });

        $('#DDate').datepicker({
        });

       

        $("#AssCompTables").DataTable({
            responsive: true,
            "bFilter": false,
            "ajax": {
                "url": "/Home/GetBeforeFilterationData",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "AssetID"},
                { "data": "Component_Name_and_Material" }
            ]
        });

       

        $('#AssCompTables tbody').on('click', 'tr', function () {
            var value = $(this).children(":first").text();
            $('#AssetTables').DataTable().clear().destroy();
            $("#AssetTables").DataTable({
                responsive: true,
                
                "bFilter": false,
                "ajax": {
                    "url": "/Home/GetAfterFilter",
                    "type": "POST",
                    "datatype": "json",
                    "data": {
                        query: value
                    }
                },
                "columns": [
                    { "data": "AssetName" },
                    { "data": "AssetDescription" },
                    { "data": "LocationID" },
                    { "data": "InstallationDate" },
                    { "data": "DisposalDate" }

                ]
            });
        });

        $('#AddComponent').click(function() {
            $.ajax({
                url: '/Home/AdDComponent',
                method: 'post',
                data: {
                    CName: $('#CName').val(),
                    CDsic: $('textarea[name="Disc"]').val(),
                    Assets: $('#Assets').val(),
                    IDate: $('#date').val(),
                    DDate: $('#DDate').val(),
                    Material: $('#material').val(),
                    Util: $('#utilisation').val(),
                    EExpo: $('#EnvironmentExposure').val(),
                    CompCat: $('#CompCat').val(),
                    CompF: $('#CompCoF').val()
                },
                dataType: 'json',
                success: function (data) {
                    if (data.d === 1) {
                        alert('Component Added');
                    } else {
                        alert('Component Added Failed');
                    }
                    
                },
                error: function (err) {
                    alert(err);
                }
            });

        });


        


    });
</script>


